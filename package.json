{
    "name": "typed-xml",
    "type": "module",
    "version": "0.1.0",
    "description": "A strongly typed XML parsing and manipulation library for TypeScript, providing type-safe XML handling capabilities",
    "author": "sya-ri",
    "main": "dist/index.cjs",
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/index.cjs",
            "types": "./dist/index.d.ts"
        },
        "./parser": {
            "import": "./dist/parser.js",
            "require": "./dist/parser.cjs",
            "types": "./dist/parser.d.ts"
        },
        "./schema": {
            "import": "./dist/schema.js",
            "require": "./dist/schema.cjs",
            "types": "./dist/schema.d.ts"
        },
        "./util": {
            "import": "./dist/util.js",
            "require": "./dist/util.cjs",
            "types": "./dist/util.d.ts"
        }
    },
    "scripts": {
        "build": "tsdown",
        "test": "vitest",
        "test:coverage": "vitest --coverage",
        "check": "run-p check:*",
        "check:biome": "biome check .",
        "check:package-json": "sort-package-json --check",
        "fix": "run-p fix:*",
        "fix:biome": "biome check --write .",
        "fix:package-json": "sort-package-json"
    },
    "devDependencies": {
        "@biomejs/biome": "2.2.5",
        "@faker-js/faker": "10.0.0",
        "@vitest/coverage-v8": "3.2.4",
        "npm-run-all2": "8.0.4",
        "sort-package-json": "3.4.0",
        "tsdown": "0.15.6",
        "typescript": "5.9.3",
        "vitest": "3.2.4"
    },
    "engines": {
        "node": "24.x"
    }
}
